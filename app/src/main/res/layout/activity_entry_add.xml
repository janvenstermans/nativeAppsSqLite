<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tile.janv.sqllitediary.EntryAddActivity">

    <TextView
        android:id="@+id/entry_add_title_label"
        android:text="@string/entry_add_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <EditText
        android:id="@+id/entry_add_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/entry_add_title_label"/>

    <TextView
        android:id="@+id/entry_add_content_label"
        android:text="@string/entry_add_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/entry_add_title"/>

    <Button
        android:id="@+id/entry_add_button_label"
        android:text="@string/entry_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/entry_add_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:layout_below="@id/entry_add_content_label"
        android:layout_above="@id/entry_add_button_label"
        android:gravity="top|left"/>



</RelativeLayout>
